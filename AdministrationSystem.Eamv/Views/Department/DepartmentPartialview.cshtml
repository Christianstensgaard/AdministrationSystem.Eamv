@model AdministrationSystem.Eamv.Models.Department

<head>
    <script src="https://unpkg.com/sweetalert2@7.1.3/dist/sweetalert2.all.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<div class="">
    <div class="vecform w-250 h-100">
        <label class="absolute ff f-36 foreground-white" style="top:30%; left:20%;">@Model.DepartmentName</label>
        <form  asp-action="deletedepartment" method="post">
            <input class="absolute" type="hidden" name="departmentid" value="@Model.DepartmentId" />
            <button class="absolute transparant pointer delete-confirm" style=" right:0%; bottom:3%;  width:20%; height:50%; border-top-left-radius:100%; "></button>
        </form>

        <svg id="Form" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 480 208">
            <path d="M363,214.83V215h87.27A35.73,35.73,0,0,0,486,179.27V92h-.17A148,148,0,0,1,473,116c-6.55,9.93-15.1,22.89-30,33-11.09,7.52-12.82,4.72-37,18-12.92,7.09-17.2,10.51-19,12-14.32,11.85-19.79,24.15-21,27A63,63,0,0,0,363,214.83Z" transform="translate(-6 -7)" fill="#c6472a" />
            <path d="M486,31.15A24.15,24.15,0,0,0,461.85,7H30.15A24.15,24.15,0,0,0,6,31.15v159.7A24.15,24.15,0,0,0,30.15,215H356.24q3.4,0,6.76-.17A106.44,106.44,0,0,1,387,181c19.7-18.41,36.61-19.17,56-32,13.33-8.83,30.24-25,42.83-57q.17-3.36.17-6.76Z" transform="translate(-6 -7)" fill="#2f3f55" />
            <text id="btn-slet" transform="translate(408.11 189.8)" font-size="30" fill="#fff" font-family="Monospace821BT-Bold, Monospac821 BT" font-weight="700">Slet</text>
        </svg>
    </div>
</div>

<!-- Scripts -->

<script>
    $('.delete-confirm').on('click', function (e) {

        e.preventDefault()

        swal({
            title: 'Bekræft',
            text: 'Advarsel: Indholdet vil blive permanent slettet!',
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Slet',
            confirmButtonColor: '#C6472A',
            cancelButtonText: 'Fortryd'
        }).then((result) => {
            if (result.value) {
                $(this).closest('form').submit();
            }
        });
    });
</script>
